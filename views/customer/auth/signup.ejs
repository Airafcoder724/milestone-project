<%- include('../../shared/includes/head' , {pageTitle : 'SignUp' }) %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
    </head>

    <body>
        <%- include('../../shared/includes/header') %>
            <main>
                <h1>Create New Account </h1>
                <% if (inputData. errorMessage){ %>
                    <section class="alert">
                        <h2>Invalid input </h2>
                        <p><%= inputData.errorMessage  %></p>

                    </section>
               <% } %>
                <form action="/signup" method="post">
                    <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                   
                    <p>
                        <label for="email">E-mail</label>
                        <input type="email" id="Email" name="email" value="<%= inputData.email %>" required>
                    </p>
                    <p>
                        <label for="conform-Email">conform-Email</label>
                        <input type="email" id="conform-Email" name="conformEmail" value="<%= inputData.conformEmail %>" required>
                    </p>
                    <p>
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" value="<%= inputData.password %>" required>
                    </p>
                    <hr>
                    <p>
                        <label for="fullname">Name</label>
                        <input type="text" id="fullname" name="fullname" value="<%= inputData.fullname %>" required>
                    </p>
                    <p>
                        <label for="street">Street</label>
                        <input type="text" id="street" name="street" rows="3" value="<%= inputData.street %>" required>
                    </p>
                    <p>
                        <label for="postal">Post Address</label>
                        <input type="text" id="postal" name="postal" minlength="5" maxlength="6" value="<%= inputData.postal %>" required>
                    </p>
                    <p>
                        <label for="city">City </label>
                        <input type="text" id="city" name="city" value="<%= inputData.city %>"  required>
                    </p>                    
                    <button class="btn" type="submit">Create Account</button>
                    <p class="switch-form"><a href="/login">login instead</a></p>
                </form>
            </main>
            <%- include('../../shared/includes/footer') %>